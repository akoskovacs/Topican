= form_for @user do |f|
  = render 'user_errors' if @user.errors.any?
  .clearfix
    = f.label :name
    .input
      = f.text_field :name
  .clearfix
    = f.label :email
    .input
      = f.text_field :email
  .clearfix
    = f.label :password
    .input
      = f.password_field :password
  .clearfix
    = f.label :password_confirmation
    .input
      = f.password_field :password_confirmation
  .actions
    = f.submit 'Create user', :class => "btn success"
    = link_to 'Cancel', :back, :class => "btn"

