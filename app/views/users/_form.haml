= form_for @user do |f|
  = render 'user_errors' if @user.errors.any?
  .field
    = f.label :name
    %br
      = f.text_field :name
  .field
    = f.label :email
    %br
      = f.text_field :email
  .field
    = f.label :password
    %br
      = f.password_field :password
  .field
    = f.label :password_confirmation
    %br
      = f.password_field :password_confirmation
  .action
    = f.submit 'Create user'
