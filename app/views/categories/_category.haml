%tr
  %td= link_to category.name, category_posts_path(category)
  - if category.description.empty?
    %td <i style="color: gray;">No description</i>
  - else
    %td <i style="color: gray;">#{category.description}</i>
  - if category.user == current_user
    %td= link_to 'Edit', edit_category_path(category)
  %td(align="right") <strong>[#{category.posts.count}]</strong>
